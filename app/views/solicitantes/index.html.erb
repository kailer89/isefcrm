(function($) {
$(document).ready(function(){
  $('#avanzada').click(function()
  {
    $('#busquedaAvanzada').toggle();
  });

<%if params[:q] == nil%>
$('#busquedaAvanzada').hide();
<%end%>


});
})(jQuery);

</script>
