<%if request.path_parameters[:controller] == "admitidos"%>  
  <div class="tab-pane fade in active well" id="admitido">
      <%= f.association :status_de_admision,:include_blank => false, :label_method => :valor, :label=>"Status de Admisión" %>
      <%= f.input :comentarios_de_la_direccion, :input_html=>{:cols=>50, :rows=>3}, :label=>"Comentarios de la Dirección" %>
      <%= f.association :status_de_la_notificacion,:include_blank => false, :label_method => :valor, :label=>"Status de Notificación:" %>
      <%= f.input :cometnarios_de_notificacion, :input_html=>{:cols=>50, :rows=>3}, :label=>"Comentarios:"%>
      <%= f.input :solicitud_de_admision, :label=>"Solicitud de Admisión"%>
      <%= f.input :copia_del_acta_de_nacimiento, :label=>"Copia del Acta de Nacimiento"%>
      <%= f.input :copia_del_certificado_de_preparatoria_licenciatura, :label=>"Copia del Certificado de preparatoria / licenciatura"%>
      <%= f.input :fotografias_tamano_infantil_blanco_y_negro_papel_mate, :label=>"4 Fotografías; Tamaño infantil, blanco y negro, papel mate" %>
      <%= f.input :copia_del_comprobante_de_pago_de_inscripcion, :label=>"Copia del comprobante de pago de inscripción" %>
      <%= f.input :comentarios_documentacion, :input_html=>{:cols=>50, :rows=>3}, :label=>"Comentarios:"%>
      <%= f.input :fecha_lim_fpi do %>
             <div class="input-append date datepicker" data-date="<%=DateTime.now.strftime('%Y/%m/%d')%>" data-date-format="yyyy/mm/dd">
               <%= f.text_field :fecha_lim_fpi%>
			   <span class="add-on"><i class="icon-th"></i></span>
             </div>  
           <%end%>
      <%= f.association :status_ref_pago_insc,:include_blank => false, :label_method => :valor, :label=>"Status de Referencia de Pago de Inscripción:" %>
      <%=f.input :archivado%>
    </div>
<%else%>
  <%= f.simple_fields_for :admitidos, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="tab-pane fade well" id="admitido">
        <%= f.association :status_de_admision,:include_blank => false, :label_method => :valor, :label=>"Status de Admisión" %>
        <%= f.input :comentarios_de_la_direccion, :input_html=>{:cols=>50, :rows=>3}, :label=>"Comentarios de la Dirección" %>
        <%= f.association :status_de_la_notificacion,:include_blank => false, :label_method => :valor, :label=>"Status de Notificación:" %>
        <%= f.input :cometnarios_de_notificacion, :input_html=>{:cols=>50, :rows=>3}, :label=>"Comentarios:"%>
        <%= f.input :solicitud_de_admision, :label=>"Solicitud de Admisión"%>
        <%= f.input :copia_del_acta_de_nacimiento, :label=>"Copia del Acta de Nacimiento"%>
        <%= f.input :copia_del_certificado_de_preparatoria_licenciatura, :label=>"Copia del Certificado de preparatoria / licenciatura"%>
        <%= f.input :fotografias_tamano_infantil_blanco_y_negro_papel_mate, :label=>"4 Fotografías; Tamaño infantil, blanco y negro, papel mate" %>
        <%= f.input :copia_del_comprobante_de_pago_de_inscripcion, :label=>"Copia del comprobante de pago de inscripción" %>
        <%= f.input :comentarios_documentacion, :input_html=>{:cols=>50, :rows=>3}, :label=>"Comentarios:"%>
        <%= f.input :fecha_lim_fpi do %>
               <div class="input-append date datepicker" data-date="<%=DateTime.now.strftime('%Y/%m/%d')%>" data-date-format="yyyy/mm/dd">
                 <%= f.text_field :fecha_lim_fpi, :readonly => true%>
           <span class="add-on"><i class="icon-th"></i></span>
               </div>  
             <%end%>
        <%= f.association :status_ref_pago_insc,:include_blank => false, :label_method => :valor, :label=>"Status de Referencia de Pago de Inscripcion:" %>
        <%=f.input :archivado%>
      </div>
      <%=render :partial=>"shared/edit_examinados", :locals=>{:f=>f}%>
  <%end%>
<%end%>