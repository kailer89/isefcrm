<%
prospectosWithNilInUser = Prospecto.where(:user_id=>nil)
%>

			<table class="table table-striped table-bordered table-hover table-condensed">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Nombre</th>
                  <th>User</th>
                </tr>
              </thead>
              <tbody>
              	<%prospectosWithNilInUser.each do |prospecto|%>
                <tr>
                  <td><%=prospecto.id%></td>
                  <td><%=prospecto.nombre%> <%=prospecto.apellido_paterno%> <%=prospecto.apellido_materno%></td>
                  <td><%=prospecto.user.username rescue nil%></td>
                </tr>
                <%end%>
              </tbody>
            </table>